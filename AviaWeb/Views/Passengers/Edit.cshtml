@model AviaWeb.Models.Passenger

@{
    ViewData["Title"] = "Редактировать информацию о пассажире";
}

<h4>Пассажир</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronical" class="control-label"></label>
                <input asp-for="Patronical" class="form-control" />
                <span asp-validation-for="Patronical" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirTickets" class="control-label"></label>
                <select asp-for="AirTickets" class="form-control" asp-items="ViewBag.AirTicketId"></select>
                <span asp-validation-for="AirTickets" class="text-danger"></span>
            </div>
            <div class="form-group" >
               <a></a> <input type="submit" value="Save" class="btn btn-primary" />
                @*<a class="btn btn-outline-dark my-2 my-sm-0" href="/Passengers/Index" role="button">Сохранить</a>*@
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку пассажиров</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
