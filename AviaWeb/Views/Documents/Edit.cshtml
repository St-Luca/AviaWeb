@model AviaWeb.Models.Document

@{
    ViewData["Title"] = "Редактировать документ";
}

<h1>Редактировать</h1>

<h4>Документ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerId" class="control-label"></label>
                <select asp-for="PassengerId" class="form-control" asp-items="ViewBag.PassengerId"></select>
                <span asp-validation-for="PassengerId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Passenger" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller = "Passengers">К списку пассажиров</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
